<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        caption="msg://itemRelationshipEdit.caption"
        focusComponent="form">
    <data>
        <instance id="itemRelationshipDc"
                  class="org.trostheide.everythingxrm.item.ItemRelationship">
            <fetchPlan extends="_base">
                <property name="item1" fetchPlan="_base"/>
                <property name="itemRelationshipClassification" fetchPlan="_base"/>
                <property name="item2" fetchPlan="_base"/>
                <property name="inverseRelationship" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <dynattr:dynamicAttributes/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="itemRelationshipDc">
                <column width="350px">
                    <entitySuggestionField id="item1Field" property="item1" dataContainer="itemRelationshipDc"  inputPrompt="Start typing">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="open" type="entity_open"/>
                        </actions>
                        <query entityClass="org.trostheide.everythingxrm.item.Item"
                               escapeValueForLike="true"
                               searchStringFormat="%${searchString}%">
                            select c from xrm_Item c where lower(c.name) like lower(:searchString) escape '\'
                        </query>
                    </entitySuggestionField>
                    <entitySuggestionField id="itemRelationshipClassificationField" property="itemRelationshipClassification" dataContainer="itemRelationshipDc"  inputPrompt="Start typing">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="open" type="entity_open"/>
                        </actions>
                        <query entityClass="org.trostheide.everythingxrm.item.ItemRelationshipClassification"
                               escapeValueForLike="true"
                               searchStringFormat="%${searchString}%">
                            select c from xrm_ItemRelationshipClassification c where lower(c.name) like lower(:searchString) escape '\'
                        </query>
                    </entitySuggestionField>
                    <entitySuggestionField id="item2Field" property="item2" dataContainer="itemRelationshipDc"  inputPrompt="Start typing">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                            <action id="open" type="entity_open"/>
                        </actions>
                        <query entityClass="org.trostheide.everythingxrm.item.Item"
                               escapeValueForLike="true"
                               searchStringFormat="%${searchString}%">
                               select c from xrm_Item c where lower(c.name) like lower(:searchString) escape '\'
                        </query>
                    </entitySuggestionField>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
