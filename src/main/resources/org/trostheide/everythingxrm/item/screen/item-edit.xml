<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://itemEdit.caption"
        focusComponent="form">
    <data>
        <instance id="itemDc"
                  class="org.trostheide.everythingxrm.item.Item">
            <fetchPlan extends="_base">
                <property name="category" fetchPlan="_instance_name"/>
                <property name="comments" fetchPlan="_base"/>
                <property name="item1Relationship" fetchPlan="_base"/>
            </fetchPlan>
            <loader dynamicAttributes="true"/>
            <collection id="commentsDc" property="comments"/>
            <collection id="item1RelationshipDc" property="item1Relationship"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions" width="80%">
        <tabSheet id="tabSheet"
                  width="80%"
                  height="AUTO">
            <tab id="tab1"
                 caption="Tab 1"
                 margin="true">
            <label id="label1"
                   value="Label 1"/>
        <form id="form" dataContainer="itemDc">
            <column width="100%">
                <textField id="nameField" property="name"/>
                <richTextArea id="descriptionField" property="description" height="400px"/>
            </column>
        </form>
        <dynamicAttributesPanel dataContainer="itemDc"
                                cols="2"
                                rows="2"
                                width="100%"/>
            </tab>
            <tab id="tab2"
                 caption="Tab 2"
                 margin="true"
                 lazy="true">
            <label id="label2"
                   value="Label 2"/>
        <groupBox id="commentsBox" caption="msg://org.trostheide.everythingxrm.item/Item.comments">
            <table id="commentsTable" dataContainer="commentsDc" width="100%"  height="200px" textSelectionEnabled="true" multiselect="true">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="title" caption="msg://org.trostheide.everythingxrm.entity/ItemComment.title"/>
                    <column id="text" caption="msg://org.trostheide.everythingxrm.entity/ItemComment.text"/>
                </columns>
                <buttonsPanel>
                    <button action="commentsTable.create"/>
                    <button action="commentsTable.edit"/>
                    <button action="commentsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
            </tab>
            <tab id="tab3"
                 caption="Tab 3"
                 margin="true"
                 lazy="true">
            <label id="label3"
                   value="Label 3"/>
        <groupBox id="item1RelationshipBox" caption="msg://org.trostheide.everythingxrm.entity/ItemRelationship">
            <table id="item1RelationshipTable" dataContainer="item1RelationshipDc" width="100%" height="200px" multiselect="true" textSelectionEnabled="true">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="item1" caption="msg://org.trostheide.everythingxrm.entity/ItemRelationship.thisItem"/>
                    <column id="itemRelationshipClassification" caption="msg://org.trostheide.everythingxrm.entity/ItemRelationship.classification"/>
                    <column id="item2" caption="msg://org.trostheide.everythingxrm.entity/ItemRelationship.otherItem"/>
                </columns>
                <buttonsPanel>
                    <button action="item1RelationshipTable.create"/>
                    <button action="item1RelationshipTable.edit"/>
                    <button action="item1RelationshipTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
            </tab>
            <tab id="tab4"
                 caption="Tab 4"
                 margin="true">
            <label id="label4"
                   value="Label 4"/>
                    <vbox>
                        <vbox id="dynamicDropZone"
                              height="AUTO"
                              spacing="true">

                            <fileMultiUpload id="fileMultiUploadField"
                                             caption="Upload"
                                             dropZone="dynamicDropZone" />
                        </vbox>
                    </vbox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>

    </layout>
</window>
